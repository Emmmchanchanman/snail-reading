/* pages/classify/classify.wxss */
page{
  padding: 0 30rpx;
  box-sizing: border-box;
}
.top{
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
}
.top .item{
  width: 330rpx;
  height: 200rpx;
  position: relative;
  border-radius: 6rpx;
  overflow: hidden;
}
.top .item image{
  width: 100%;
  height: 100%;
}
.top .item view{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  letter-spacing: 25rpx;
}
.top .item view text:first-child{
display: inline-block;
margin-left: 24rpx;
}
.top .item view text:last-child{
  font-size: 20rpx;
  letter-spacing: 10rpx;
  padding-left: 10rpx;

}
.line{
  width: 100%;
  height: 1px;
  background: #f1f1f1;
    text-align: center;
}
.line text{
  position: relative;
  top: -16rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  background: #fff;
  color: #b3b3b3;
}
.classify{
  flex-wrap: wrap;
}
.classify .item{
  width: 210rpx;
  height: 210rpx;
  margin-bottom: 30rpx;
}
.classify .item view{
  align-items: flex-start;
  justify-content: flex-start;
}
.classify .item text{
  font-size: 30rpx !important;
  display: block;
  padding: 20rpx 0 0 0rpx;
  margin-left: 20rpx;  
}
